<%= page_title 'Projects' %>

<%= render_lock :global %>

<%= form_tag '?', method: :get, class: 'clearfix' do %>
  <%= render 'shared/search_query' %>
  <%= render 'shared/search_button' %>
<% end %>

<section class="clearfix">
  <% if @projects.empty? %>
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      You currently don't have any projects setup.
    </div>
  <% else %>
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: "project", collection: @projects %>
      </tbody>
    </table>
  <% end %>

  <div class="admin-actions">
    <div class="pull-right">
      <%= render "locks/button", lock: global_lock, resource: nil %>

      <%= link_to "Add a new project", new_project_path, class: "btn btn-default" %>
    </div>
    <%= paginate @projects %>
  </div>
</section>
