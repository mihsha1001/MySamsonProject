<% page_title "Builds" %>

<%= render 'projects/header', project: @project, tab: "builds" %>

<section class="tabs">
  <p class="pull-right">
    <%= link_to "Edit Pre Build Command", project_build_command_path(@project), class: "btn btn-default"  %>
    <%= link_to "Create Build", new_project_build_path(@project), class: "btn btn-default" %>
  </p>

  <table class="table">
    <thead>
    <tr>
      <th>Build</th>
      <% unless @project %>
        <th>Project</th>
      <% end %>
      <th>Created</th>
      <th>Created By</th>
      <th>Git Ref</th>
      <th>Docker Build</th>
    </tr>
    </thead>

    <tbody>
    <%= render partial: "builds/build", collection: @builds, as: :build %>
    </tbody>
  </table>

  <%= paginate @builds %>
</section>
